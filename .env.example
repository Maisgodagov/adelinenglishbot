# Токен бота от @BotFather
BOT_TOKEN=your_bot_token_here

# ID канала для проверки подписки (формат: @channelname или -100123456789)
CHANNEL_ID=@yourchannel

# Ссылка на канал
CHANNEL_LINK=https://t.me/yourchannel

# Контакт поддержки
SUPPORT_CONTACT=@your_support

# Ссылка на курс после оплаты
COURSE_LINK=https://example.com/course

# ID администраторов через запятую
ADMIN_IDS=123456789,987654321

# Username бота (без @, для ссылки на странице успеха)
BOT_USERNAME=your_bot_username

# ЮKassa настройки
# ID магазина ЮKassa (shopId из личного кабинета)
YOOKASSA_SHOP_ID=123456

# Секретный ключ ЮKassa (secret key из личного кабинета)
YOOKASSA_SECRET_KEY=live_your_secret_key_here

# Сумма платежа в рублях
PAYMENT_AMOUNT=1000

# URL вашего сервера (для success URL и webhook)
SERVER_URL=https://yourdomain.com

# Порт для webhook сервера (по умолчанию 3000)
WEBHOOK_PORT=3000

# Google Analytics 4
# Measurement ID (формат: G-XXXXXXXXXX)
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# API Secret (создайте в Admin > Data Streams > Measurement Protocol API secrets)
GA_API_SECRET=your_api_secret_here
